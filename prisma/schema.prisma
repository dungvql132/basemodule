// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  name      String
  age       Int?
  active    Boolean         @default(true)
  tokens    Token[]
  words     Word[]
  viewWords UserViewWords[]
}

model Token {
  id        Int      @id @default(autoincrement())
  secretKey String
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  exp       DateTime
  active    Boolean  @default(false)
}

model Word {
  id          Int             @id @default(autoincrement())
  text        String
  wordDetails WordDetail[]
  authorId    User?           @relation(fields: [userId], references: [id])
  userId      Int?
  viewUsers   UserViewWords[]
}

model UserViewWords {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  word   Word @relation(fields: [wordId], references: [id])
  wordId Int

  @@id([userId, wordId])
}

model WordDetail {
  id           Int           @id @default(autoincrement())
  meaning      String
  word         Word?         @relation(fields: [wordId], references: [id])
  wordId       Int?
  wordExamples WordExample[]
  wordType     WordType?     @relation(fields: [wordTypeId], references: [id])
  wordTypeId   Int?
}

model WordExample {
  id           Int        @id @default(autoincrement())
  example      String
  wordDetailId Int
  wordDetails  WordDetail @relation(fields: [wordDetailId], references: [id])
}

model WordType {
  id          Int          @id @default(autoincrement())
  type        String
  wordDetails WordDetail[]
}
